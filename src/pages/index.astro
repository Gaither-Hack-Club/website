---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

const workshops = await getCollection("workshops");
---

<BaseLayout>
  <p class="text-center text-lg font-medium lg:text-2xl">
    Gaither Hack Club is a <strong>student-led</strong> coding club at Gaither
    High School.
  </p>
  <p class="pb-16 text-center text-lg font-medium lg:text-2xl">
    Interested? Sign up on <a
      href="https://forms.office.com/r/FBtKsJAb0S"
      class="text-blue-400 underline">this form</a
    >!
  </p>
  <div
    class="flex flex-col items-center justify-evenly gap-10 lg:flex-row lg:items-start lg:gap-0"
  >
    <div
      class="flex w-5/6 flex-col items-start justify-start gap-2 rounded-md border-2 border-black bg-red-700 p-8 drop-shadow-2xl lg:w-1/3"
    >
      <h2
        class="w-full text-center font-gothic text-xl font-semibold lg:text-3xl"
      >
        General Resources
      </h2>
      <p class="text-md lg:text-xl">
        <a href="https://hackclub.com" target="_blank" class="underline"
          >Hack Club</a
        > - A nonprofit network of high school coding clubs and makers around
        the world. Grants and cool projects included! Join the amazing Slack
        community to chat with fellow makers!
      </p>
      <p class="text-md lg:text-xl">
        <a href="https://freecodecamp.org" target="_blank" class="underline"
          >freeCodeCamp</a
        > - Learn to code by building dozens of projects, step-by-step, right in
        your browser, code editor, or mobile app.
      </p>
    </div>
    <div
      class="flex w-5/6 flex-col items-start justify-start gap-2 rounded-md border-2 border-black bg-green-700 p-8 drop-shadow-2xl lg:w-1/3"
    >
      <h2
        class="w-full text-center font-gothic text-xl font-semibold lg:text-3xl"
      >
        Club Resources
      </h2>
      {
        workshops.map((workshop) => (
          <p class="text-md lg:text-xl">
            <a href={`/workshops/${workshop.slug}`} class="underline">
              {workshop.data.name}
            </a>{" "}
            - {workshop.data.description}
          </p>
        ))
      }
      <p class="text-md lg:text-xl">
        <a
          href="https://jams.hackclub.com/batch/sprig/part-1"
          target="_blank"
          class="underline">Sprig</a
        > - Get started making your very first game with the Sprig game engine,
        using JavaScript!
      </p>
    </div>
  </div>
</BaseLayout>

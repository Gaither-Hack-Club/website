---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

const workshops = await getCollection("workshops");
---

<BaseLayout>
  <p class="pb-16 pt-10 text-center text-lg font-medium lg:text-2xl">
    Gaither Hack Club is a student-led coding club at Gaither High School.
  </p>
  <div
    class="flex flex-col items-center justify-evenly gap-10 lg:flex-row lg:items-start lg:gap-0"
  >
    <div
      class="flex w-5/6 flex-col items-start justify-start gap-2 rounded-md bg-red-700 p-4 drop-shadow-lg lg:w-1/3"
    >
      <h2
        class="w-full text-center font-gothic text-xl font-semibold lg:text-3xl"
      >
        Resources
      </h2>
      <p class="text-md lg:text-xl">
        <a href="https://hackclub.com" target="_blank" class="underline"
          >Hack Club</a
        > - A nonprofit network of high school coding clubs and makers around
        the world.
      </p>
      <p class="text-md lg:text-xl">
        <a href="https://freecodecamp.org" target="_blank" class="underline"
          >freeCodeCamp</a
        > - Learn to code by building dozens of projects, step-by-step, right in
        your browser, code editor, or mobile app.
      </p>
    </div>
    <div
      class="flex w-5/6 flex-col items-start justify-start gap-2 rounded-md bg-green-700 p-4 drop-shadow-lg"
    >
      <h2
        class="w-full text-center font-gothic text-xl font-semibold lg:text-3xl"
      >
        Workshops
      </h2>
      {
        workshops.map((workshop) => (
          <p class="text-md lg:text-xl">
            <a href={`/workshops/${workshop.slug}`} class="underline">
              {workshop.data.name}
            </a>{" "}
            - {workshop.data.description}
          </p>
        ))
      }
    </div>
  </div>
</BaseLayout>
